<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mess.home.MessHomeFragment">

    <LinearLayout
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:text="COST"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/extra_cost"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="bottom"
                android:textColor="@color/white"
                android:text="INR"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="4dp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            app:cardCornerRadius="16dp" >

            <ScrollView
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="24dp"
                        android:contentDescription="Today's Extras"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Today's Extras"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="8dp"
                            android:text="Breakfast"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <HorizontalScrollView
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:padding="8dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="256dp"
                                    android:elevation="8dp"
                                    app:cardCornerRadius="6dp"
                                    android:layout_height="wrap_content">

                                    <!--                                TODO-->

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="one"
                                        android:id="@+id/item1_breakfast"/>
                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="two"
                                        android:id="@+id/item2_breakfast"/>
                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="one"
                                        android:id="@+id/item3_breakfast"/>
                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="one"
                                        android:id="@+id/item4_breakfast"/>
                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="one"
                                        android:id="@+id/item5_breakfast"/>
                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="one"
                                        android:id="@+id/item6_breakfast"/>
                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="one"
                                        android:id="@+id/item7_breakfast"/>
                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="one"
                                        android:id="@+id/item8_breakfast"/>
                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="one"
                                        android:id="@+id/item9_breakfast"/>
                                    <CheckBox
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:hint="one"
                                        android:id="@+id/item10_breakfast"/>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </HorizontalScrollView>

                        <TextView
                            android:layout_marginTop="24dp"
                            android:text="Lunch"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <HorizontalScrollView
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:padding="8dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="256dp"
                                    android:elevation="8dp"
                                    app:cardCornerRadius="6dp"
                                    android:layout_height="wrap_content">

                                    <!--                                TODO-->

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item1_lunch"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="two"
                                            android:id="@+id/item2_lunch"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item3_lunch"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item4_lunch"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item5_lunch"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item6_lunch"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item7_lunch"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item8_lunch"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item9_lunch"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item10_lunch"/>
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </HorizontalScrollView>

                        <TextView
                            android:layout_marginTop="24dp"
                            android:text="Dinner"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <HorizontalScrollView
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:padding="8dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="256dp"
                                    android:elevation="8dp"
                                    app:cardCornerRadius="6dp"
                                    android:layout_height="wrap_content">

                                    <!--                                TODO-->



                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <CheckBox
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:hint="one"
                                                android:id="@+id/item1_dinner"/>

                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="two"
                                            android:id="@+id/item2_dinner"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item3_dinner"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item4_dinner"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item5_dinner"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item6_dinner"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item7_dinner"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item8_dinner"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item9_dinner"/>
                                        <CheckBox
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="one"
                                            android:id="@+id/item10_dinner"/>
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/apply_leave"
                        android:layout_marginTop="32dp"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_margin="24dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="72dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="24dp">

                        <Button
                            android:text="Add"
                            android:id="@+id/add_bt"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:background="#00ffffff"
                            android:clickable="false"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/apply_leave"
                        android:layout_marginTop="32dp"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_margin="24dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="72dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="24dp">

                        <Button
                            android:text="Pay with UPI"
                            android:id="@+id/payment_bt"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="24dp"
                            android:background="#00ffffff"
                            android:clickable="false"
                            android:gravity="center"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="-16dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress"
        android:background="@color/black"
        android:gravity="center"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>