<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.student.myaccount.MyAccountFragment">

    <LinearLayout
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="64dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/student_profile_picture"
                    android:background="@drawable/student"
                    android:layout_gravity="center"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:contentDescription="User display image" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            app:cardCornerRadius="16dp" >

            <ScrollView
                android:layout_marginTop="16dp"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/register"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/student_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Full Name"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                    <TextView
                        android:id="@+id/student_email"
                        android:hint="emailemail@example.com"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                    <TextView
                        android:id="@+id/student_mees_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="MESS ID"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"  />

                    <LinearLayout
                        android:layout_marginTop="36dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:text="Extra payment"
                                    android:maxLines="2"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/student_extras_payment"
                                    android:text="899.0"
                                    android:maxLines="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                                <TextView
                                    android:text="INR"
                                    android:textAlignment="center"
                                    android:padding="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:maxLines="2"
                                    android:text="Monthly Payment"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/student_monthly_payment"
                                    android:text="899.0"
                                    android:maxLines="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                                <TextView
                                    android:text="INR"
                                    android:textAlignment="center"
                                    android:padding="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:text="Rebate"
                                    android:maxLines="2"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/student_rebate"
                                    android:text="899.0"
                                    android:maxLines="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                                <TextView
                                    android:text="INR"
                                    android:textAlignment="center"
                                    android:padding="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            android:layout_margin="4dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_margin="4dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:text="Refund"
                                    android:maxLines="2"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/student_refund"
                                    android:text="899.0"
                                    android:maxLines="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

                                <TextView
                                    android:text="INR"
                                    android:textAlignment="center"
                                    android:padding="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/update"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="32dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="72dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="20dp">

                        <TextView
                            android:drawableStart="@drawable/refresh"
                            android:drawablePadding="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:layout_margin="12dp"
                            android:background="#00ffffff"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="Refresh" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progress"
        android:background="@color/black"
        android:gravity="center"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>